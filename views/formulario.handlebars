<main>
    {{!-- Formulário --}}
    <div class="container">
        <div class="row">
            <div class="col-6 offset-4">
                <form action="/incluir" method="post">
                    <input type="text" name="nome" class="form-control" placeholder="Nome da Tarefa">
                    <input type="number" name="custo" class="form-control" placeholder="Custo da Tarefa">
                    <input type="date" name="data_limite" class="form-control" aria-label="Data Limite da Tarefa">
                    <input type="submit" class="btn btn-primary" value="Incluir">
                </form>
            </div>
        </div>
    </div>

    {{!-- Listagem das Tarefas --}}
    <div class="container">
        <div class="row">
            {{#each tarefas}}
                <div class="col-12">
                    <div class="card {{#if (gte custo 1000)}}highlight{{/if}}">
                        <div class="textos">
                            <p>{{id}}</p>
                            <p>{{nome}}</p>
                            <p>R${{custo}}</p>
                            <p>{{data_limite}}</p>
                        </div>
                        <div class="btn-container">
                            <a href="/formularioEditar/{{id}}" class="btn btn-warning">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="#" class="btn btn-danger" onclick="(function(event) { confirmarExclusao(event, {{id}}); })(event)">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>

    {{!-- Modal de Confirmação --}}
    <div class="modal fade" id="confirmacaoModal" tabindex="-1" aria-labelledby="confirmacaoModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmacaoModalLabel">Confirmação</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Tem certeza de que deseja excluir esta tarefa?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Não</button>
                    <button type="button" class="btn btn-danger" id="btnConfirmarExclusao">Sim</button>
                </div>
            </div>
        </div>
    </div>
</main>
