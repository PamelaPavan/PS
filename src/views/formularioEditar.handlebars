<main>
    {{#if erro}}
        <div class="alert alert-danger" role="alert">{{erro}}</div>
    {{/if}}

    {{!-- Formulário de Edição --}}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form action="/editar" method="post">
                    <input type="hidden" name="id" value="{{tarefa.id}}" readonly>
                    <input type="text" name="nome" value="{{tarefa.nome}}" class="form-control" placeholder="Nome da Tarefa">
                    <input type="number" name="custo" value="{{tarefa.custo}}" class="form-control" placeholder="Custo da Tarefa">
                    <input type="date" name="data_limite" value="{{tarefa.data_limite}}" class="form-control" aria-label="Data Limite da Tarefa">
                    <input type="submit" class="btn btn-primary" value="Alterar">
                    <a href="/" class="btn btn-secondary">Cancelar</a>
                </form>
            </div>
        </div>
    </div>

    {{!-- Listagem das Tarefas --}}
    <div class="container">
        <div class="row">
            {{#each tarefas}}
                <div class="col-12">
                    <div class="card {{#if (gte custo 1000)}}highlight{{/if}}">
                        <div class="textos">
                            <p>{{id}}</p>
                            <p>{{nome}}</p>
                            <p>R${{custo}}</p>
                            <p>{{data_limite}}</p>
                        </div>
                        <div class="btn-container">
                            <a href="/formularioEditar/{{id}}" class="btn btn-warning">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="/remover/{{id}}" class="btn btn-danger">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</main>
